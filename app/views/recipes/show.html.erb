<article>

    <header>
        <h1> <%= @recipe.name %> </h1>
        <%= imagem(@recipe) %>
    </header>

    <h2>Tipo</h2>
    <p> <%= @recipe.kind %> </p>

    <h2>Ingredientes</h2>
    <p> <%= @recipe.stuff %> </p>

    <h2>Calorias</h2>
    <p> <%= @recipe.calories %> </p>

    <h2>Tempo de preparo</h2>
    <p> <%= @recipe.duration.to_formatted_s(:time) %> </p> min

    <h2>Porções</h2>
    <p> <%= pluralize(@recipe.portion, "porção", "porções") %> </p>

    <h3>Modo de preparo</h3>
    <p> <%= @recipe.prepare_mode %> </p>
    
    <h3>Custo</h3>
    <p> <%= @recipe.cost %> </p>

</article>

<%= link_to "Receitas", recipes_path %> <br>
<%= link_to "Editar receita", edit_recipe_path(@recipe) %> <br>
<%= link_to "Deletar receita", recipe_path(@recipe), method: :delete, data:{confirm: "Deseja mesmo deletar essa receita?"} %>